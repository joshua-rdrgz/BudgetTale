{
  "compilerOptions": {
    "sourceMap": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@errorMessages": ["../errorMessages/errorMessages"],
      "@types": ["types/types"],
      "@models/*": ["src/models/*"],
      "@routes/*": ["src/routes/*"],
      "@controllers/*": ["src/controllers/*"],
      "@errors/*": ["src/errors/*"],
      "@utils/*": ["src/utils/*"]
    },
    "types": ["mocha", "chai"]
  },
  "include": ["src/**/*", "test/**/*"]
}
